{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B", "${workspaceFolder}/build"],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build"],
            "group": {
                "kind": "build",
            }, 
            "dependsOn": "CMake Configure"
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build", "--target", "clean"],
            "group": "build"
        },
        {
            "label": "Make Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "test",
                "isDefault": true
            }, 
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}/workspace/pro",
            "args": ["pro -j16"],
            "group": {
                "kind": "test",
                "isDefault": true
            }, 
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "dependsOn": "Make Build"
        }
    ]
}
